{
  "name": "nftxport",
  "version": "0.1.0",
  "description": "NFTx Port is a marketplace for NFTs that allows users to buy and sell NFTx on the Ethereum blockchain.",
  "main": "contracts/NFTxPort.sol",
  "author": "nftx",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=20.5.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "2.0.2",
    "@nomicfoundation/hardhat-ethers": "3.0.4",
    "@nomicfoundation/hardhat-ledger": "1.0.1",
    "@nomicfoundation/hardhat-network-helpers": "1.0.9",
    "@nomicfoundation/hardhat-toolbox": "3.0.0",
    "@nomicfoundation/hardhat-verify": "1.1.1",
    "@nomiclabs/hardhat-solhint": "3.0.1",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "2.2.1",
    "@typechain/ethers-v6": "0.5.0",
    "@typechain/hardhat": "9.0.0",
    "@types/chai": "4.3.6",
    "@types/mocha": "10.0.1",
    "@types/node": "20.6.0",
    "@typescript-eslint/parser": "6.7.0",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "chai": "4.3.8",
    "hardhat": "2.17.3",
    "hardhat-gas-reporter": "1.0.9",
    "solidity-coverage": "0.8.4",
    "prettier": "2.8.8",
    "prettier-plugin-solidity": "1.1.3",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-import": "2.28.1",
    "ts-node": "10.9.1",
    "typechain": "8.3.1",
    "ethers": "6.7.1",
    "typescript": "5.2.2"
  },
  "scripts": {
    "build": "yarn clean; hardhat compile --config ./hardhat.config.ts;",
    "clean": "hardhat clean; hardhat clean --config ./hardhat.config.ts; forge clean; rm -rf coverage coverage.json hh-cache hh-cache-ref",
    "test": "yarn clean; hardhat test --config ./hardhat.config.ts",
    "profile": "yarn clean; REPORT_GAS=true hardhat test --config ./hardhat.config.ts;",
    "profile:nospec": "yarn clean; NO_SPECIALIZER=true REPORT_GAS=true hardhat test --config ./hardhat.config.ts",
    "coverage": "yarn clean; hardhat coverage --config ./hardhat-coverage.config.ts --solcoverjs ./config/.solcover.js",
    "lint:check": "yarn lint:check:format && yarn lint:check:solhint && yarn lint:check:eslint",
    "lint:check:format": "prettier --check **.{sol,js,ts}",
    "lint:check:solhint": "yarn build && solhint --config ./config/.solhint.json --ignore-path ./config/.solhintignore contracts/**/*.sol",
    "lint:check:eslint": "eslint . --ext js,ts",
    "lint:fix": "yarn lint:fix:format && yarn lint:fix:eslint",
    "lint:fix:format": "prettier --write **.{sol,js,ts}",
    "lint:fix:eslint": "eslint --fix . --ext js,ts",
    "deploy:hardhat": "yarn build && hardhat run scripts/deployProxy.ts --network hardhat --config ./hardhat.config.ts",
    "deploy:sepolia": "yarn build && hardhat run scripts/deployProxy.ts --network sepolia --config ./hardhat.config.ts",
    "upgrade:sepolia": "yarn build && hardhat run scripts/upgradeProxy.ts --network sepolia --config ./hardhat.config.ts"
  },
  "lint-staged": {
    "*.sol": "prettier --write",
    "*.js": "prettier --write",
    "*.ts": "prettier --write"
  },
  "dependencies": {
    "dotenv": "16.3.1"
  }
}
